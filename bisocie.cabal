Name:                bisocie
Version:             0.4
License:             BSD3
License-file:        LICENSE
Author:              Seitoku Univ. Junior College, Department of Arts and Sciences
Maintainer:          cutsea110@gmail.com
Synopsis:            the yesod web application.
Description:         a BTS written in haskell.
Category:            Web
Stability:           Experimental
Cabal-version:       >=1.6
Build-type:          Simple
Homepage:            https://github.com/cutsea110/BISocie

Flag dev
    Description:   Turn on development settings, like auto-reload templates.
    Default:       False

Flag library-only
    Description:   Build for use with "yesod devel"
    Default:       False

library
    if flag(library-only)
        Buildable: True
    else
        Buildable: False

    exposed-modules: Application
    other-modules:   Foundation
                     Model
                     Settings
                     Settings.StaticFiles
                     Handler.Root
                     Handler.Profile
                     Handler.Project
                     Handler.Issue
                     Handler.Participants
                     Handler.User
                     Handler.S3
                     Handler.Admin
                     BISocie.Helpers.Auth.HashDB
                     BISocie.Helpers.Util

    ghc-options:   -Wall -threaded -O0
    cpp-options:   -DDEVELOPMENT

executable bisocie
    if flag(library-only)
        Buildable: False

    if flag(dev)
        cpp-options:   -DDEVELOPMENT
        ghc-options:   -Wall -threaded -O0
    else
        ghc-options:   -Wall -threaded -O0

    main-is: main.hs
  
    build-depends: base         >= 4       && < 5
                 , HTTP         >= 4000.1
                 , yesod        >= 0.9     && < 0.10
                 , yesod-auth   >= 0.7     && < 0.8
                 , yesod-core   >= 0.9     && < 0.10
                 , yesod-default >= 0.5    && < 0.6
                 , yesod-static >= 0.3     && < 0.4
                 , yesod-form   >= 0.3     && < 0.4
                 , failure      >= 0.1     && < 0.2
                 , certificate == 1.0.1
                 , http-enumerator == 0.7.2.5
                 , tls == 0.8.5
                 , tls-extra == 0.4.2.1
                 , transformers
                 , mime-mail
                 , network      >= 2.3     && < 2.4
                 , wai
                 , wai-extra
                 , directory
                 , bytestring
                 , text
                 , persistent   >= 0.5.1   && < 0.7
                 , persistent-postgresql >= 0.5.0 && < 0.7
                 , persistent-template >= 0.6 && < 0.7
                 , http-types
                 , template-haskell
                 , hamlet
                 , language-javascript == 0.4.5
                 , hjsmin       >= 0.0.12  && < 0.1
                 , utility-ht
                 , warp
                 , filepath
                 , time         >= 1.1     && < 2.0
                 , old-locale
                 , parsec       >= 3.1     && < 3.2
                 , SHA          >= 1.5 && < 1.6
                 , shakespeare-text
                 , shakespeare-js
                 , shakespeare-css
                 , blaze-html
                 , clientsession
                 , utf8-string  >= 0.3.7   && < 0.4

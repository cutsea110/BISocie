$(document).ready(function(){
  $("form#newproject").submit(function(){
    var valid = true;
    $('span.invalid').remove();
    $('input.required, textarea.required').each(function(){
      $(this).removeClass('invalid');
      var v = $(this).val();
      if (v=="") {
        $(this).addClass('invalid');
        $(this).after("<span class='invalid'>必須入力項目です.</span>");
        valid = false;
      }
    });
    return valid;
  });
});

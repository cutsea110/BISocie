$newline never
<ul .tabs>
<div .login-options>
  <div align=center>
    <form .validate.auth method=post action="@{AuthR setPassR}">
      <table>
        <tbody>
          <tr>
            <th>現在のパスワード:
            <td>
              <input .watermark type=password name=current_pass required>
          <tr>
            <th>新しいパスワード:
            <td>
              <input .watermark type=password name=new_pass required>
          <tr>
            <th>新しいパスワード(確認):
            <td>
              <input .watermark type=password name=new_pass2 required>
      <input .login_button type=submit value="変更">
